{
    "widgets": [
        {
            "type": "metric",
            "x": 0,
            "y": 0,
            "width": 12,
            "height": 6,
            "properties": {
                "metrics": [
                    [ "AWS/ECS", "ServiceUtilization", "ServiceName", "gameforge-sdxl-gpu-service", "ClusterName", "gameforge-gpu-cluster" ],
                    [ ".", "CPUUtilization", ".", ".", ".", "." ],
                    [ ".", "MemoryUtilization", ".", ".", ".", "." ]
                ],
                "view": "timeSeries",
                "stacked": false,
                "region": "us-west-2",
                "title": "ECS Service Metrics",
                "period": 300
            }
        },
        {
            "type": "metric",
            "x": 12,
            "y": 0,
            "width": 12,
            "height": 6,
            "properties": {
                "metrics": [
                    [ "AWS/EC2", "CPUUtilization", "InstanceId", { "stat": "Average" } ],
                    [ ".", "NetworkIn", ".", { "stat": "Sum" } ],
                    [ ".", "NetworkOut", ".", { "stat": "Sum" } ]
                ],
                "view": "timeSeries",
                "stacked": false,
                "region": "us-west-2",
                "title": "GPU Instance Metrics",
                "period": 300
            }
        },
        {
            "type": "log",
            "x": 0,
            "y": 6,
            "width": 24,
            "height": 6,
            "properties": {
                "query": "SOURCE '/aws/ecs/gameforge-sdxl-gpu'\n| fields @timestamp, @message\n| filter @message like /GPU/\n| sort @timestamp desc\n| limit 100",
                "region": "us-west-2",
                "title": "GPU Service Logs",
                "view": "table"
            }
        },
        {
            "type": "metric",
            "x": 0,
            "y": 12,
