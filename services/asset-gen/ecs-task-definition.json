{
    "family": "gameforge-sdxl-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["EC2"],
    "cpu": "2048",
    "memory": "8192",
    "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/GameForgeSDXLTaskRole",
    "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/GameForgeSDXLExecutionRole",
    "containerDefinitions": [
        {
            "name": "gameforge-sdxl-container",
            "image": "${AWS_ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com/gameforge/sdxl-worker:latest",
            "cpu": 2048,
            "memory": 8192,
            "essential": true,
            "resourceRequirements": [
                {
                    "type": "GPU",
                    "value": "1"
                }
            ],
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "MODEL_CACHE_DIR",
                    "value": "/app/models"
                },
                {
                    "name": "S3_MODEL_BUCKET", 
                    "value": "gameforge-models"
                },
                {
                    "name": "AWS_DEFAULT_REGION",
                    "value": "us-east-1"
                },
                {
                    "name": "REDIS_URL",
                    "value": "redis://gameforge-redis.abc123.cache.amazonaws.com:6379"
                },
                {
                    "name": "LOG_LEVEL",
                    "value": "INFO"
                },
                {
                    "name": "WORKERS",
                    "value": "2"
                },
                {
                    "name": "MAX_CONCURRENT_JOBS",
                    "value": "4"
                },
                {
                    "name": "CUDA_VISIBLE_DEVICES",
                    "value": "0"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "model-cache",
                    "containerPath": "/app/models",
                    "readOnly": false
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/gameforge-sdxl",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8000/health || exit 1"
                ],
                "interval": 30,
                "timeout": 10,
                "retries": 3,
                "startPeriod": 120
            }
        }
    ],
    "volumes": [
        {
            "name": "model-cache",
            "host": {
                "sourcePath": "/opt/ml/models"
            }
        }
    ],
    "placementConstraints": [
        {
            "type": "memberOf",
            "expression": "attribute:ecs.instance-type =~ g4dn.*"
        }
    ],
    "tags": [
        {
            "key": "Project",
            "value": "GameForge"
        },
        {
            "key": "Service", 
            "value": "SDXL-Worker"
        },
        {
            "key": "Environment",
            "value": "Production"
        }
    ]
}
