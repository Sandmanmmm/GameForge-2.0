# GameForge Production Environment Variables
# ============================================

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_USER=gameforge
POSTGRES_DB=gameforge_prod
DATABASE_URL=postgresql://gameforge:${POSTGRES_PASSWORD}@postgres:5432/gameforge_prod

# Application Security
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
SECRET_KEY=your_app_secret_key_here_min_32_chars

# Vast.ai / Cloud Deployment Configuration
JUPYTER_TOKEN=your_secure_jupyter_token_here
GF_SECURITY_ADMIN_PASSWORD=your_secure_grafana_admin_password_here

# Phase 4: Vault Configuration
VAULT_ROOT_TOKEN=your_vault_root_token_here
VAULT_TOKEN=your_vault_token_here

# Phase 4: Model Storage (S3/MinIO)
S3_ENDPOINT_URL=http://minio:9000
AWS_REGION=us-east-1
MODEL_S3_BUCKET=gameforge-models
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# AI Service Configuration  
OPENAI_API_KEY=your_openai_api_key_here

# Phase 4: Required Models (Optional - for testing)
REQUIRED_MODELS=stabilityai/stable-diffusion-xl-base-1.0

# Redis Configuration
REDIS_PASSWORD=

# Monitoring Configuration
PROMETHEUS_USER=admin
PROMETHEUS_PASSWORD=admin
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# SSL Configuration (if needed)
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private

# Phase 4: Additional Security Settings
MODEL_SECURITY_ENABLED=true
SECURITY_SCAN_ENABLED=true
STRICT_MODEL_SECURITY=true
VAULT_HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# Frontend Configuration (VITE_ prefixed variables)
# =================================================

# API Endpoints (no trailing slashes)
VITE_GAMEFORGE_API_URL=http://localhost:3001/api
VITE_INFERENCE_API_URL=http://localhost:8000
VITE_SUPERRES_API_URL=http://localhost:8001

# Application Configuration
VITE_APP_ENV=development
VITE_APP_VERSION=1.0.0

# Feature flags
VITE_ENABLE_TELEMETRY=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false

# Performance settings
VITE_API_TIMEOUT=30000
VITE_UPLOAD_TIMEOUT=120000
VITE_MAX_RETRIES=3
VITE_RETRY_DELAY=1000

# Asset configuration
VITE_MAX_UPLOAD_SIZE=52428800  # 50MB
VITE_ASSET_STORAGE_URL=http://localhost:3001/assets

# AI generation defaults
VITE_DEFAULT_AI_MODEL=sdxl-base
VITE_DEFAULT_IMAGE_SIZE=1024
VITE_JOB_POLLING_INTERVAL=1000
VITE_MAX_POLLING_DURATION=300000  # 5 minutes

# Development and debugging
VITE_DEBUG_API_CALLS=true
VITE_DEBUG_REACT=true
